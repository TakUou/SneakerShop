<Window x:Class="SneakerShop.Salesman"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SneakerShop"
        mc:Ignorable="d"
        Title="Salesman" Height="450" Width="800">
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Button x:Name="Buyer" Content="Покупатель" HorizontalAlignment="Center" VerticalAlignment="Top" Width="400" Height="65" Click="Buyer_Click"/>
            <Button x:Name="CashRegister" Content="Касса" HorizontalAlignment="Center" VerticalAlignment="Top" Width="400" Height="65" Grid.Column="1" Click="CashRegister_Click" />
            <Frame x:Name="Frame" Grid.ColumnSpan="3" Margin="0,65,0,0" NavigationUIVisibility="Hidden"/>
        </Grid>
    </Grid>
</Window>
