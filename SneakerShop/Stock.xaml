<Window x:Class="SneakerShop.Stock"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SneakerShop"
        mc:Ignorable="d"
        Title="Stock" Height="450" Width="800" Closing="Window_Closing">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Button x:Name="Firm" Content="Фирма" HorizontalAlignment="Center" VerticalAlignment="Top" Width="200" Height="65" Click="Firm_Click"/>
        <Button x:Name="Country" Content="Страна" HorizontalAlignment="Center" VerticalAlignment="Top" Width="200" Height="65" Grid.Column="1" Click="Country_Click" />
        <Button x:Name="Provider" Content="Поставщик" HorizontalAlignment="Center" VerticalAlignment="Top" Width="200" Height="65" Grid.Column="2" Click="Provider_Click" />
        <Frame x:Name="Frame" Grid.ColumnSpan="4" Margin="0,65,0,0" NavigationUIVisibility="Hidden"/>
        <Button x:Name="StockSneakers" Grid.Column="3" Content="Склад" HorizontalAlignment="Center" VerticalAlignment="Top" Height="65" Width="200" Click="StockSneakers_Click"/>
    </Grid>
</Window>
